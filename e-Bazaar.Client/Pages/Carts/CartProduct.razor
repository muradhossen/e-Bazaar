@using e_Bazaar.Client.ViewModels

<div class="d-flex align-items-start justify-content-between border-bottom py-3">
    <div class="d-flex">
        <img src="@Container.Key.ImageUrl" alt="@Container.Key.Name" class="img-thumbnail me-3" style="width: 60px; height: 60px; object-fit: cover;" />
        <div>
            <div class="fw-semibold">@Container.Key.Name</div>
            <div class="text-muted">Qty: @Container.Quantity</div>
        </div>
    </div>
    <div class="fw-semibold text-nowrap">@Container.GetTotalPrice().ToString("F2")</div>
</div>

 
@code {
    
    [Parameter] public ProductContainer Container { get; set; } = new(); 
}

